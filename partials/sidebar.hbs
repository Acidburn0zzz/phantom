<div class="sidebar" role="aside" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
		<header class="header">
			{{#if @blog.logo}}
			<a href="/">
				<div id="blog" class="circle" style="background-image: url({{@blog.logo}});"></div>
			</a>
			{{/if}}
			<h1 class="title"><a href="/">{{@blog.title}}</a></h1>

			<div class="separator"></div>

			<p class="description">{{@blog.description}}</p>
			<div class="social-icons">
				<a href="https://github.com/Bartinger" class="icon icon-github"></a>
				<a href="https://plus.google.com/+DominicBartl" class="icon icon-gplus"></a>
				<a href="https://twitter.com/DevBartinger" class="icon icon-twitter"></a>
				<a href="/rss" class="icon-rss"></a>
			</div>
		</header>
	</div>